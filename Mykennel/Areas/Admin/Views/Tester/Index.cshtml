@model string[]

@{
    ViewData["Title"] = "Tester page";
}

<h1>Tester</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <a class="btn btn-dark" asp-action="CreateUsers">Create Users</a>
            <p>Number of Users: @ViewData["UserCount"] </p>

            <a class="btn btn-dark" asp-action="CreateBreedsCountries">Create Breeds and Countries</a>
            <p>
                Number of Breeds: @ViewData["BreedCount"], <br>
                Number of Countries: @ViewData["CountryCount"]
            </p>

            <a class="btn btn-dark" asp-action="CreateKennels">Create Kennels</a>
            <p>Number of Kennels: @ViewData["KennelCount"] </p>

            <a class="btn btn-dark" asp-action="CreateRest">Create Dogs, Litters and Puppies</a>
            <p>
                Number of Dogs: @ViewData["DogCount"] <br>
                Number of Litters: @ViewData["LitterCount"] <br>
                Number of Puppies: @ViewData["PuppyCount"]
            </p>

            <a class="btn btn-danger" asp-action="DeleteKennels">Remove all kennels</a>

            <a class="btn btn-danger" asp-action="DeleteAll">Remove all (except Admin)</a>

            @if (TempData["ErrorMessage"] != null)
            {
                <p class="alert">Action failed, please try again!</p>
                <p class="alert">The error message: @TempData["ErrorMessage"]</p>
            }
        </div>

        <div class="col-sm-6 py-2">
            <p>
                <a class="btn btn-danger" asp-action="DeleteImages">Remove all files</a>
                @if (Model.Count() != 0)
                {
                    <p>There are @Model.Count() folders in the User upload folder</p>
                } else
                {
                    <p>User upload folder is empty!</p>
                }
            </p>
        </div>
    </div>
</div>