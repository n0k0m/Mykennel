@model IEnumerable<Mykennel.Models.Litter>

@{
    ViewData["Title"] = "Index";
}

<div class="container bg-dark text-light rounded py-2">
    <h1>Search for Litters</h1>
    <div class="row">
        <div class="col-xl-8">
            <form id="searchKennelForm" asp-action="Index" method="get">
                <div class="row form-group">
                    <div class="col-md-5">
                        <label class="control-label">@Html.DisplayNameFor(model => model.Breed)</label>
                        <select id="SelectedBreed" name="breed" class="form-control" asp-items="ViewBag.BreedId">
                            <option selected value=""></option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="control-label">@Html.DisplayNameFor(model => model.Country)</label>
                        <select id="SelectedCountry" name="country" class="form-control" asp-items="ViewBag.CountryId">
                            <option selected value=""></option>
                        </select>
                    </div>
                    <div class="col-sm-2 my-3">
                        <input type="submit" value="Filter" class="btn btn-primary font-weight-bold text-capitalize" style="font-size:28px" />
                    </div>
                </div>
                <div>
                    <label class="form-check-label">Hobby only</label>
                    <input class="form-check-inline" id="SelectedHobby" type="checkbox" name="hobby" style="height:20px; width:20px;">
                </div>
            </form>
        </div>
    </div>
</div>


<hr />

@foreach (var item in Model)
{
    <div class="container py-2">
        <h3 style="display: inline;">
            <a asp-controller="Litters" asp-action="Details" asp-route-id="@item.LitterId">"@item.Name" litter</a> -
            <a asp-controller="Kennels" asp-action="Details" asp-route-id="@item.KennelId">@item.Kennel.KennelName </a>
        </h3>
        <p style="display: inline;"><strong>@item.Country.CountryName</strong></p>
        <p>@Html.DisplayNameFor(model => model.Breed): @item.Breed.Name (@item.Breed.OriginalName)<br>
          <br>
           @Html.DisplayNameFor(model => model.Date): @item.Date.Year. @item.Date.Month. @item.Date.Day.</p>
        <hr />
    </div>
}

