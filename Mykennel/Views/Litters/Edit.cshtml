@model Mykennel.Models.Litter

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Litter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LitterId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KennelId" class="control-label"></label>
                <select asp-for="KennelId" class="form-control" asp-items="ViewBag.KennelId"></select>
                <span asp-validation-for="KennelId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FatherId" class="control-label"></label>
                <select asp-for="FatherId" class="form-control" asp-items="ViewBag.FatherId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="FatherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotherId" class="control-label"></label>
                <select asp-for="MotherId" class="form-control" asp-items="ViewBag.MotherId">
                    <option selected value=""></option>
                </select>
                <span asp-validation-for="MotherId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyLitters">Back to My Litters</a>
</div>

