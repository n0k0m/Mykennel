@model Mykennel.Models.Kennel

@{
    ViewData["Title"] = "Index";
}

<h1>My kennel settings</h1>

@{ if (ViewBag.AlreadyExists == true)
    {
        <a asp-action="Edit" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" class="btn btn-danger">Delete</a>

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.KennelName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.KennelName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.URLName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.URLName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Logo)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Logo != null)
                    {
                        <div>
                            <img src="@Model.Logo" style="max-height:200px;" />
                        </div>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostalCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PostalCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ContactPerson)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Country.CountryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApplicationUser.UserName)
                </dd>
            </dl>
        </div>

        <a asp-action="Details" asp-route-id="@Model.URLName" class="btn btn-primary">Go to my kennel page</a>
    }
    else
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
}