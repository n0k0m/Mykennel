@model Mykennel.Models.Kennel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<h3 class="text-danger">This operation can not be undone!</h3>
<div>
    <h4>Kennel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KennelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KennelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URLName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URLName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Logo != null)
            {
                <div>
                    <img src="@Model.Logo" style="max-height:200px;" />
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPerson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>
    </dl>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p class="text-danger">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="KennelId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Settings">Back to Kennel Settings</a>
    </form>
</div>
